# Server Configuration
PORT=3000
NODE_ENV=development

# JWT Secret (REQUIRED - Generate with: node -e "console.log(require('crypto').randomBytes(32).toString('hex'))")
# MUST be at least 32 characters long
# Example: d4e5f6a7b8c9d0e1f2a3b4c5d6e7f8a9b0c1d2e3f4a5b6c7d8e9f0a1b2c3d4e5
JWT_SECRET=

# Frontend URL (for CORS)
FRONTEND_URL=http://localhost:5173

# Database
DATABASE_PATH=./server/database/cocktail-analyzer.db

# Anthropic API Key (for AI Bartender feature)
# Get your API key from: https://console.anthropic.com/
ANTHROPIC_API_KEY=your-anthropic-api-key-here
